<html>
  <head>
    <%- include('./includes/head.ejs') %>
  </head>

  <body class="bg-dark">
    <center>
      <%- include('./includes/header.ejs') %>
      <div>
        <%- include('./includes/navbar.ejs') %>
      </div>

      <h2 class="text-white">REGISTRATION</h2>

      <%if(msg){%>
      <h3 class="bg-success msg"><%=msg%></h3>
      <%}%>

      <div class="bg-primary msg">
        <form method="POST" style="padding:40px;">
          <div class="form-group">
            <label>Name</label>
            <input
              type="text"
              class="form-control"
              placeholder="Enter Name"
              name="name"
              value="<%=data.name%>"
            />
          </div>

          <div class="form-group">
            <label>College</label>
            <input
              type="text"
              class="form-control"
              name="college"
              placeholder="Enter College Name"
              value="<%=data.college%>"
            />
          </div>

          <div class="form-group">
            <label>Place</label>
            <input
              type="text"
              class="form-control"
              name="place"
              placeholder="Enter Location"
              value="<%=data.location%>"
            />
          </div>

          <div class="form-group">
            <label>Mobile</label>
            <input
              type="text"
              class="form-control"
              placeholder="Enter Mobile "
              name="mobile"
              value="<%=data.mobile%>"
            />
          </div>

          <div class="form-group">
            <label>Select Events</label>
            <select name="event" multiple size="14" class="form-control">
              <option value="Admiring Advertisment"
                >Admiring Advertisment</option
              >
              <option value="Blogger Design">Blogger Design</option>
              <option value="Code Hunt">Code Hunt</option>
              <option value="Code and Debugging">Code and Debugging</option>
              <option value="Dance">Dance</option>
              <option value="Dazzle Coding">Dazzle Coding</option>
              <option value="Paper Presentation">Paper Presentation</option>
              <option value="Poster Presentation">Poster Presentation</option>
              <option value="Tech Quiz">Tech Quiz</option>
              <option value="Tech Selfie">Tech Selfie</option>
              <option value="Telugu Poetry">Telugu Poetry</option>
              <option value="Treasure Hunt">Treasure Hunt</option>
              <option value="Web Designing">Web Designing</option>
              <option value="Word Runner">Word Runner</option>
            </select>
          </div>

          <div class="form-group">
            <label>Companion1</label>
            <input
              type="text"
              class="form-control"
              placeholder="Enter Companion1 "
              name="c1"
              value="<%=data.c1%>"
            />
          </div>

          <div class="form-group">
            <label>Companion2</label>
            <input
              type="text"
              class="form-control"
              placeholder="Enter Companion2 "
              name="c2"
              value="<%=data.c2%>"
            />
          </div>

          <div class="form-group">
            <label>Companion3</label>
            <input
              type="text"
              class="form-control"
              placeholder="Enter Companion2 "
              name="c3"
              value="<%=data.c3%>"
            />
          </div>

          <input
            type="submit"
            class="btn bg-dark text-white"
            value="Register"
          />
        </form>
      </div>
    </center>
  </body>
</html>
